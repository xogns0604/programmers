
//https://programmers.co.kr/learn/courses/30/lessons/43165
package LV3.integerTriangle;


public class Solution {
	
	int[][] triangleOut;
	int num = 0;
	
	public int solution(int[][] triangle) {
		
		triangleOut = triangle;
		
		triangleMethod(0, 0);
        return num;
    }
		 
		 
	void triangleMethod(int sum, int depth) {
		for(int i=0 ; i<triangleOut[depth].length*2 ; i++) {
			
			if(depth == triangleOut.length) {
				if(num < sum) num = sum;
				return;
			}
			System.out.println(sum);
			triangleMethod(sum + triangleOut[depth][i], depth++);
		}
	}
	
	


}


// for문으로 할지 깊이 탐색알고리즘을 쓸지 고민