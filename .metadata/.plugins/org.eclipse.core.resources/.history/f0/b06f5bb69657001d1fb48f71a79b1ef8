package LV1.TestPersonalityType;
//https://school.programmers.co.kr/learn/courses/30/lessons/118666

public class Solution {
	public String solution(String[] survey, int[] choices) {
		int[][] surveys = new int[2][4];
		String[] type = {"RT", "CF", "JM", "AN"};
		
		for(int i=0 ; i<survey.length ; i++) {
			System.out.println(surveys);
			if(survey[i].indexOf('R') != -1) {
				if(survey[i].indexOf('R') == 0) {
					if(choices[i]>4) {
						surveys[1][0] += choices[i] - 4;
					} else {
						surveys[0][0] += 4 - choices[i];
					}
				} else {
					if(choices[i]>4) {
						surveys[0][0] += choices[i] - 4;
					} else {
						surveys[1][0] += 4 - choices[i];
					}
				}
			} else if(survey[i].indexOf('C') != -1) {
				if(survey[i].indexOf('C') == 0) {
					if(choices[i]>4) {
						surveys[1][1] += choices[i] - 4;
					} else {
						surveys[0][1] += 4 - choices[i];
					}
				} else {
					if(choices[i]>4) {
						surveys[1][1] += choices[i] - 4;
					} else {
						surveys[0][1] += 4 - choices[i];
					}
				}
			} else if(survey[i].indexOf('J') != -1) {
				if(survey[i].indexOf('J') == 0) {
					if(choices[i]>4) {
						surveys[1][2] += choices[i] - 4;
					} else {
						surveys[0][2] += 4 - choices[i];
					}
				} else {
					if(choices[i]>4) {
						surveys[1][2] += choices[i] - 4;
					} else {
						surveys[0][2] += 4 - choices[i];
					}
				}
			} else {
				if(survey[i].indexOf('A') == 0) {
					if(choices[i]>4) {
						surveys[1][3] += choices[i] - 4;
					} else {
						surveys[0][3] += 4 - choices[i];
					}
				} else {
					if(choices[i]>4) {
						surveys[1][3] += choices[i] - 4;
					} else {
						surveys[0][3] += 4 - choices[i];
					}
				}
			}
		}
		

        String answer = "";
        
        for(int i=0 ; i<4 ; i++) {
        	
        	if(surveys[0][i] >= surveys[1][i]) {
        		answer += type[i].charAt(0);
        	} else {
        		answer += type[i].charAt(1);
        	}
        }
        return answer;
    }
}
